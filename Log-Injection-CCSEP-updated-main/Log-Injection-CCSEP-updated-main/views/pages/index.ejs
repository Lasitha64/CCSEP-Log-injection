<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="container">
    <form class="container" action="/login" method="POST">
      <div class="col">
        <div class="md-form">
          <i class="fas fa-user prefix"></i>
          <label for="username">User Name</label>
          <input
            type="text"
            id="username"
            name="username"
            class="form-control"
            required
            pattern="[A-Za-z]{3,}"
          />
        </div>
      </div>
      <div class="col">
        <div class="md-form">
          <i class="fas fa-user prefix"></i>
          <label for="username">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            required
            pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$"
          />
        </div>
      </div>
      <div class="col">
        <div class="md-form">
          <i class="fas fa-key prefix"></i>
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            required
            minlength="4"
          />
        </div>

        <button class="btn btn-lg btn-success btn-block my-3" type="submit">
          Sign in
        </button>
      </div>
    </form>
  </body>
</html>
